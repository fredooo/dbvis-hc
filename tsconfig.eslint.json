{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node10",
    "target": "es6",
    "module": "es6",
    "lib": [ "es6" ],
    "declaration": true,
    "esModuleInterop": true
  },
  "include": [ "src", "test" ],
  "exclude": [ "node_modules" ]
}
